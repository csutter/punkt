#!/bin/bash

# Layout govuk_docker: Set up for projects run through GOV.UK
layout_govuk_docker() {
  local project_name=$1

  # Set up GOV.UK Docker
  export GOVUK_ROOT_DIR=$HOME/Developer/govuk
  PATH_add "$GOVUK_ROOT_DIR/govuk-docker/exe"

  # Set up project commands
  export PUNKT_CMD_BUILD='(cd "${GOVUK_ROOT_DIR}/govuk-docker" && make ${project_name})'
  export PUNKT_CMD_RUN="govuk-docker-run ${project_name}-lite"
  export PUNKT_CMD_SERVE="govuk-docker-up ${project_name}-app"
}
