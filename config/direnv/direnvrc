#!/bin/bash

# Layout govuk_docker: Set up for projects run through GOV.UK
layout_govuk_docker() {
  local project_name=$(basename $(pwd))

  # Set up GOV.UK Docker
  export GOVUK_ROOT_DIR=$HOME/Developer/govuk
  PATH_add "$GOVUK_ROOT_DIR/govuk-docker/exe"

  # Set up project commands
  export PUNKT_CMD_BUILD="(cd ${GOVUK_ROOT_DIR}/govuk-docker && make ${project_name})"
  export PUNKT_CMD_RUN="govuk-docker run --rm ${project_name}-lite"
  export PUNKT_CMD_SERVE="govuk-docker up ${project_name}-${STACK:-app}"
}

# Use nvim_configsets [configsets]: Set up configsets for Neovim
use_nvim_configsets() {
  export PUNKT_NVIM_CONFIGSETS=$1
}
